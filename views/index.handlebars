{{!-- this is just like html --}}
{{!-- Headers --}}
<h1>Burger Display</h1>
<div id="burger-display">

    {{!-- display all the burgers that are not eaten --}}
    <div id="notEaten">
        <ul>
            {{#each burgers}} {{#unless this.devoured}}
                <li>
                    {{this.burger_name}}
                        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button type="submit">Devour</button>
                        </form>
                </li>
            {{/unless}}{{/each}}
        </ul>
    </div>

    {{!-- display all the burgers that have been eaten --}}
    <div id="eaten">
        <ul>
            {{#each burgers}} {{#if this.devoured}}
                <li>
                    {{this.burger_name}}
                    <form action="burgers/update{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="false">
                        <button type="submit">Submit</button>
                    </form>
                </li>
            {{/if}}{{/each}}
        </ul>
    </div>

    {{!-- in this section create a space to add a burger --}}
    <div id="addBurger">
        <div id="input">
            Add a burger:
            <form class="create-update-form" action="burgers/create" method="POST">
                <div class="form-group">
                    <label for="ca">Description:</label>
                    <input type="text" id="ca" name="burgerName">
                </div>
                <button id="add-burger-button" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>